<h1>Cadastrar receita:</h1>

<%= form_with model: @recipe, local: true do |f| %>
  <%= f.label :title, 'Titulo' %>
  <%= f.text_field :title %>
  <div>
  <%= f.label :cuisine, 'Cozinha' %>
  <%= f.text_field :cuisine %>
  </div>
  <%= f.label :recipe_type, 'Tipo' %>
  <%= f.text_field :recipe_type %>
  <div>
  <%= f.label :cook_time, 'Tempo de preparo' %>
  <%= f.number_field :cook_time %>
  </div>
  <%= f.label :ingredients, 'Ingredientes' %>
  <%= f.text_field :ingredients %>
  <div>
  <%= f.label :cook_method, 'Modo de Preparo' %>
  <%= f.text_area :cook_method %>
  </div>
  <%= f.submit 'Enviar' %>
<% end %>
